{% extends 'base.html.twig' %}

{% block title %}Need index{% endblock %}

{% block body %}
    <h1>Need index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for need in needs %}
            <tr>
                <td>{{ need.id }}</td>
                <td>{{ need.name }}</td>
                <td>
                    <a href="{{ path('app_need_show', {'id': need.id}) }}">show</a>
                    <a href="{{ path('app_need_edit', {'id': need.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_need_new') }}">Create new</a>
{% endblock %}
