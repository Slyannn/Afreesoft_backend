{% extends 'base.html.twig' %}

{% block title %}OrganismAdmin{% endblock %}

{% block body %}

    <div class="card ">
        <div class="card-header">
            <h2 class="text-center text-primary m-3">Detail</h2>

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-2">
                    <h5>id</h5>
                </div>
                <div class="col-10">
                    <p>{{ organism_admin.id }}</p>
                    <hr>
                </div>

                <div class="col-2">
                    <h5>Logo</h5>
                </div>
                <div class="col-10">
                    <img src="/uploads/{{ organism_admin.logo }}" class="img-thumbnail" alt="logo" style="width: 100px; height: 100px;">
                    <hr>
                </div>

                <div class="col-2">
                    <h5>Name</h5>
                </div>
                <div class="col-10">
                    <span>{{ organism_admin.name }}</span>
                    <hr>
                </div>

                <div class="col-2">
                    <h5>Email</h5>
                </div>
                <div class="col-10">
                    <span>{{ organism_admin.email }}</span>
                    <hr>
                </div>

                <div class="col-2">
                    <h5>Description</h5>
                </div>
                <div class="col-10">
                    <span>{{ organism_admin.description}}</span>
                    <hr>
                </div>

                <div class="col-2">
                    <h5>Street</h5>
                </div>
                <div class="col-10">
                    <span>{{ organism_admin.address.street}}</span>
                    <hr>
                </div>

                <div class="col-2">
                    <h5>Zip Code</h5>
                </div>
                <div class="col-10">
                    <span>{{ organism_admin.address.zipCode}}</span>
                    <hr>
                </div>

                <div class="col-2">
                    <h5>City</h5>
                </div>
                <div class="col-10">
                    <span>{{ organism_admin.address.city}}</span>
                    <hr>
                </div>

                <div class="col-2">
                    <h5>Country</h5>
                </div>
                <div class="col-10">
                    <span>{{ organism_admin.address.country}}</span>
                    <hr>
                </div>

                <div class="col-2">
                    <h5>Services</h5>
                </div>
                <div class="col-10">
                    <ul>
                        {% for service in organism_admin.services  %}
                            <li>{{ service.name }}</li>
                        {% endfor %}
                    </ul>
                    <hr>
                </div>




            </div>
        </div>
        <div class="d-flex justify-content-end">
            <a class="btn btn-outline-success m-1" href="{{ path('app_organism_admin_edit', {'id': organism_admin.id}) }}">edit</a>
            {{ include('organism_admin/_delete_form.html.twig') }}
        </div>

    </div>

    <a type="button" class="btn btn-outline-dark m-3" href="{{ path('app_organism_admin_index') }}">back to list</a>

{% endblock %}
