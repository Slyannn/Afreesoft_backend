{% extends 'base.html.twig' %}

{% block title %}OrganismAdmin index{% endblock %}

{% block body %}
    <h1>Organism Profile</h1>

    <table class="table">
        <thead>
        <tr>
            <th class="text-center">Id &#x1F511;</th>
            <th class="text-center">Logo &#128248; </th>
            <th class="text-center">Name &#9997;</th>
            <th class="text-center">Organism Email 	&#128231;</th>
            <th class="text-center">Phone &#x260E;</th>
            <th class="text-center">Description &#x1F4F0; </th>
            <th class="text-center">Address &#x1F3E0; </th>

            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for organism in organisms %}
            <tr>
                <td>{{ organism.id }}</td>
                <td><img src="/uploads/logo/{{ organism.logo }}" class="img-thumbnail" alt="logo" style="width: 50px; height: 50px;"></td>
                <td>{{ organism.name }}</td>
                <td>{{ organism.organismEmail }}</td>
                <td>{{ organism.phone }}</td>
                <td>{{ organism.description }}</td>
                {% set address = organism.address.street ~ ' ' ~
                    organism.address.zipCode ~ ' ' ~
                    organism.address.city ~ ' ' ~
                    organism.address.country %}
                <td>{{ address }}</td>

                <td>
                    <a href="{{ path('app_organism_profile_show', {'id': organism.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}